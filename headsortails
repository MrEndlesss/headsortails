import random

coin = ["heads", "tails"]

text = input("heads or tails?:")
result = random.choice(coin)

while True:
    if text == result:
        print("'" + result + "'" + " Your side")
        break
    elif text != result:
        print("'" + result + "'" + " not your side")
        break
    else:
        print("only heads or tails")
